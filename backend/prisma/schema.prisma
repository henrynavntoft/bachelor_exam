generator client {
  provider = "prisma-client-js"
  seed     = "seed.ts"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  GUEST
  HOST
  ADMIN
}

enum EventType {
  BREAKFAST
  LUNCH
  DINNER
  SPECIAL
}

model User {
  id                 String                   @id @default(uuid())
  firstName          String
  lastName           String
  email              String                   @unique
  hashedPassword     String
  profilePicture     String?
  role               Role                     @default(GUEST)
  isVerified         Boolean                  @default(false)
  hostedEvents       Event[]                  @relation("HostEvents")
  attendingEvents    Attendee[] // guests attending events
  createdAt          DateTime                 @default(now())
  updatedAt          DateTime                 @updatedAt
  isDeleted          Boolean                  @default(false)
  resetTokens        PasswordResetToken[]
  verificationTokens EmailVerificationToken[]
  messages           Message[]
  ratingsReceived    Rating[]                 @relation("RatingsReceived")
  ratingsGiven       Rating[]                 @relation("RatingsGiven")
}

model EmailVerificationToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model Rating {
  id          String   @id @default(uuid())
  rating      Int // Should be validated in application logic to be between 1-10
  comment     String?
  ratedUserId String
  ratedUser   User     @relation("RatingsReceived", fields: [ratedUserId], references: [id])
  raterUserId String
  raterUser   User     @relation("RatingsGiven", fields: [raterUserId], references: [id])
  eventId     String // Link to the specific event for which the rating is given
  event       Event    @relation(fields: [eventId], references: [id])
  createdAt   DateTime @default(now())

  @@unique([ratedUserId, raterUserId, eventId]) // A user can only rate another user once per event
}

model Event {
  id             String     @id @default(uuid())
  title          String
  description    String
  images         String[]
  date           DateTime
  location       String
  capacity       Int? // Max number of attendees
  pricePerPerson Float? // Optional price per person
  eventType      EventType  @default(SPECIAL) // Type of event (e.g., BREAKFAST, LUNCH, DINNER, SPECIAL)
  hostId         String
  host           User       @relation("HostEvents", fields: [hostId], references: [id])
  attendees      Attendee[]
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  isDeleted      Boolean    @default(false)
  messages       Message[]
  Rating         Rating[]
}

model Attendee {
  id        String   @id @default(uuid())
  userId    String
  eventId   String
  quantity  Int      @default(1) // Number of spots this attendance record represents
  user      User     @relation(fields: [userId], references: [id])
  event     Event    @relation(fields: [eventId], references: [id])
  createdAt DateTime @default(now())
}

model Message {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id])
}
